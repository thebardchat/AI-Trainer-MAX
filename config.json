{
  "project": "Angel Cloud AI Training Tools",
  "version": "1.0.0",
  "base_path": "D:\\Angel_Cloud\\shanebrain-core\\training-tools",
  "hardware": {
    "ram_ceiling_gb": 7.4,
    "module_max_gb": 3.0,
    "min_free_ram_mb": 2048,
    "warn_free_ram_mb": 4096
  },
  "infrastructure": {
    "llm": "ollama",
    "model": "llama3.2:1b",
    "ollama_url": "http://localhost:11434",
    "vector_db": "weaviate",
    "weaviate_url": "http://localhost:8080"
  },
  "phases": {
    "phase-1-builders": {
      "title": "BUILDERS",
      "status": "active",
      "target_audience": "Developers and technical self-learners",
      "modules": {
        "1.1": {
          "id": "1.1",
          "title": "Your First Local LLM",
          "description": "Install Ollama, pull your first model, run your first local inference. No cloud. No API key. Just your machine talking back to you.",
          "estimated_minutes": 15,
          "prerequisites": [],
          "path": "phases/phase-1-builders/module-1.1-first-local-llm",
          "files": ["lesson.md", "exercise.bat", "verify.bat", "hints.md"],
          "skills_taught": ["ollama install", "model pulling", "CLI inference", "local-first mindset"]
        },
        "1.2": {
          "id": "1.2",
          "title": "Vectors Made Simple",
          "description": "Set up Weaviate, turn plain text into vectors, and run your first semantic search. Think of it as giving your AI a filing cabinet with a brain.",
          "estimated_minutes": 15,
          "prerequisites": ["1.1"],
          "path": "phases/phase-1-builders/module-1.2-vectors",
          "files": ["lesson.md", "exercise.bat", "verify.bat", "hints.md"],
          "skills_taught": ["weaviate setup", "embeddings", "semantic search", "vector storage"]
        },
        "1.3": {
          "id": "1.3",
          "title": "Build Your Brain",
          "description": "Connect Ollama + Weaviate into a RAG pipeline. Your AI stops guessing and starts answering from YOUR documents.",
          "estimated_minutes": 15,
          "prerequisites": ["1.1", "1.2"],
          "path": "phases/phase-1-builders/module-1.3-build-your-brain",
          "files": ["lesson.md", "exercise.bat", "verify.bat", "hints.md"],
          "skills_taught": ["RAG pipeline", "document loading", "context injection", "personal AI"]
        },
        "1.4": {
          "id": "1.4",
          "title": "Prompt Engineering for Local Models",
          "description": "Small models need precise instructions. Learn to write prompts that get real answers from a 1-billion parameter model running on your own hardware.",
          "estimated_minutes": 15,
          "prerequisites": ["1.1"],
          "path": "phases/phase-1-builders/module-1.4-prompt-engineering",
          "files": ["lesson.md", "exercise.bat", "verify.bat", "hints.md"],
          "skills_taught": ["prompt structure", "system prompts", "temperature control", "small model optimization"]
        },
        "1.5": {
          "id": "1.5",
          "title": "Ship It",
          "description": "Package everything into a single .bat launcher. Double-click and your personal AI boots up. That's sovereignty.",
          "estimated_minutes": 15,
          "prerequisites": ["1.1", "1.2", "1.3", "1.4"],
          "path": "phases/phase-1-builders/module-1.5-ship-it",
          "files": ["lesson.md", "exercise.bat", "verify.bat", "hints.md"],
          "skills_taught": ["bat scripting", "health checks", "launcher design", "packaging"]
        }
      }
    },
    "phase-2-operators": {
      "title": "OPERATORS",
      "status": "active",
      "target_audience": "Small business owners, dispatchers, hustlers",
      "modules": {
        "2.1": {
          "id": "2.1",
          "title": "Load Your Business Brain",
          "description": "Turn your business documents into a searchable AI knowledge base. Pricing, policies, procedures — all indexed and ready to query.",
          "estimated_minutes": 15,
          "prerequisites": ["1.5"],
          "path": "phases/phase-2-operators/module-2.1-load-your-business-brain",
          "files": ["lesson.md", "exercise.bat", "verify.bat", "hints.md"],
          "skills_taught": ["business knowledge base", "category tagging", "batch ingestion", "source attribution"],
          "weaviate_class": "BusinessDoc"
        },
        "2.2": {
          "id": "2.2",
          "title": "The Instant Answer Desk",
          "description": "Build a Q&A tool that answers business questions with source citations. Ask anything about your business and get a verified answer in seconds.",
          "estimated_minutes": 15,
          "prerequisites": ["2.1"],
          "path": "phases/phase-2-operators/module-2.2-instant-answer-desk",
          "files": ["lesson.md", "exercise.bat", "verify.bat", "hints.md"],
          "skills_taught": ["source citations", "confidence scoring", "grounded responses", "business Q&A"]
        },
        "2.3": {
          "id": "2.3",
          "title": "Draft It",
          "description": "AI message drafting with reusable templates and tone control. Write customer replies, follow-ups, and notices using your real business data.",
          "estimated_minutes": 20,
          "prerequisites": ["2.1", "2.2"],
          "path": "phases/phase-2-operators/module-2.3-draft-it",
          "files": ["lesson.md", "exercise.bat", "verify.bat", "hints.md"],
          "skills_taught": ["message drafting", "template management", "tone control", "context injection"],
          "weaviate_class": "DraftTemplate"
        },
        "2.4": {
          "id": "2.4",
          "title": "Sort and Route",
          "description": "Message triage — classify incoming messages by category, assign priority, and get suggested actions. Your AI dispatcher.",
          "estimated_minutes": 15,
          "prerequisites": ["2.1"],
          "path": "phases/phase-2-operators/module-2.4-sort-and-route",
          "files": ["lesson.md", "exercise.bat", "verify.bat", "hints.md"],
          "skills_taught": ["message classification", "priority scoring", "action suggestions", "triage patterns"],
          "weaviate_class": "MessageLog"
        },
        "2.5": {
          "id": "2.5",
          "title": "Paperwork Machine",
          "description": "Generate estimates, reports, checklists, and letters from simple prompts. Your rates, your terms, your format — every time.",
          "estimated_minutes": 20,
          "prerequisites": ["2.1", "2.3"],
          "path": "phases/phase-2-operators/module-2.5-paperwork-machine",
          "files": ["lesson.md", "exercise.bat", "verify.bat", "hints.md"],
          "skills_taught": ["document generation", "template matching", "structured output", "business documents"],
          "weaviate_class": "DocTemplate"
        },
        "2.6": {
          "id": "2.6",
          "title": "Chain Reactions",
          "description": "Multi-step workflows that chain all your tools together. A message comes in — classify, find policy, draft response, log it. One input, full automation.",
          "estimated_minutes": 20,
          "prerequisites": ["2.1", "2.2", "2.3", "2.4", "2.5"],
          "path": "phases/phase-2-operators/module-2.6-chain-reactions",
          "files": ["lesson.md", "exercise.bat", "verify.bat", "hints.md"],
          "skills_taught": ["workflow chaining", "multi-step automation", "audit logging", "process automation"],
          "weaviate_class": "WorkflowLog"
        },
        "2.7": {
          "id": "2.7",
          "title": "Your Operator Dashboard",
          "description": "Package every Phase 2 tool into a single-launcher business AI toolkit. Health checks, stats, and all tools in one menu. The capstone.",
          "estimated_minutes": 15,
          "prerequisites": ["2.1", "2.2", "2.3", "2.4", "2.5", "2.6"],
          "path": "phases/phase-2-operators/module-2.7-operator-dashboard",
          "files": ["lesson.md", "exercise.bat", "verify.bat", "hints.md"],
          "skills_taught": ["dashboard design", "tool integration", "system monitoring", "daily operations"]
        }
      }
    },
    "phase-3-everyday": {
      "title": "EVERYDAY USERS",
      "status": "coming_soon",
      "target_audience": "The 800 million — non-technical Windows users",
      "modules": {}
    },
    "phase-4-legacy": {
      "title": "LEGACY",
      "status": "coming_soon",
      "target_audience": "Family, next generation, YourNameBrain users",
      "modules": {}
    }
  }
}
